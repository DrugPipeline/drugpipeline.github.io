---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsCard from '../components/NewsCard.astro';
import feedData from '../data/feeds.json';

interface FeedEntry {
  title: string;
  link: string;
  source: string;
  category: string;
  date: string;
  summary: string;
}

const entries = (feedData as FeedEntry[]).slice(0, 6);
---

<BaseLayout title="DrugPipeline — Pharma & Biotech News for Scientists">
  {/* Hero */}
  <section class="py-12 text-center">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      Your lens into <span class="text-primary">pharma & biotech</span>
    </h1>
    <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600">
      Curated news, career resources, and AI-powered audio briefings for PhDs and scientists entering the pharmaceutical industry.
    </p>
    <div class="mt-8 flex flex-wrap justify-center gap-4">
      <a
        href="/news"
        class="rounded-lg bg-primary px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-primary-dark"
      >
        Browse News
      </a>
      <a
        href="/career"
        class="rounded-lg border border-gray-300 px-6 py-3 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-100"
      >
        Career Resources
      </a>
    </div>
  </section>

  {/* Latest news */}
  <section class="py-8">
    <div class="flex items-end justify-between">
      <h2 class="text-2xl font-bold text-gray-900">Latest News</h2>
      <a href="/news" class="text-sm font-medium text-primary hover:text-primary-dark">
        View all &rarr;
      </a>
    </div>

    {entries.length > 0 ? (
      <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {entries.map((entry) => (
          <NewsCard {...entry} />
        ))}
      </div>
    ) : (
      <p class="mt-4 text-gray-500">News feed coming soon — powered by RSS aggregation.</p>
    )}
  </section>

  {/* Teasers for other sections */}
  <section class="grid gap-6 py-8 sm:grid-cols-3">
    <a href="/insights" class="group rounded-lg border border-gray-200 bg-white p-6 transition-shadow hover:shadow-md">
      <h3 class="font-semibold text-gray-900 group-hover:text-primary">Insights</h3>
      <p class="mt-1 text-sm text-gray-500">Industry analysis and opinion pieces from pharma professionals.</p>
    </a>
    <a href="/career" class="group rounded-lg border border-gray-200 bg-white p-6 transition-shadow hover:shadow-md">
      <h3 class="font-semibold text-gray-900 group-hover:text-primary">Career Resources</h3>
      <p class="mt-1 text-sm text-gray-500">Guides for PhDs and scientists transitioning into the pharma industry.</p>
    </a>
    <a href="/podcast" class="group rounded-lg border border-gray-200 bg-white p-6 transition-shadow hover:shadow-md">
      <h3 class="font-semibold text-gray-900 group-hover:text-primary">Podcast</h3>
      <p class="mt-1 text-sm text-gray-500">AI-generated audio briefings to keep you up to speed.</p>
    </a>
  </section>
</BaseLayout>
